<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

<div class="row mt-5 dashboard-blog m-0">
  <div class="col-md-12 display-flex">
    <div class="col-md-6">
      <h3>Post a New Blog:</h3>

      <form class="form new-blog-form" autocomplete="off">
        <div class="form-group">
          <label for="blog-title">Blog title:</label>
          <input class="form-input" type="text" id="title-input" name="title-input" required/>
        </div>
        <div class="form-group">
          <label for="blog-content">Content:</label>
          <textarea class="form-input" id="blog-content" name="blog-content" required></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Post</button>
        </div>
      </form>
    </div>

    {{#if blogs.length}}
    <div class="col-md-6 blog-list">
      <h3>Your Blogs:</h3>

      {{#each blogs as |blog|}}
      <div class="row mb-2">
        <div class="col-md-8">
          <h4><a id="blog-title" href="/blog/{{blog.id}}">{{blog.title}}</a></h4>
        </div>
        <div class="col-md-4">
          <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
        </div>
      </div>
      {{/each}}
    </div>
    {{/if}}
  </div>
</div>

<script src="./js/dashboard.js"></script>